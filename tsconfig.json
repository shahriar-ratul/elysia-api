{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules"],
    "types": ["bun-types"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "src/types/**/*.d.ts",
    "eslint.config.mts",
    "commitlint.config.ts",
    "prisma/**/*",
    "vitest.config.ts",
    "prisma.config.ts",
    "performance-test.js"
  ],
  "exclude": ["node_modules", "dist"]
}
