{
  "name": "app",
  "version": "1.0.50",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dev": "bun run --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "bun run typecheck && rm -rf dist && bun build ./src/index.ts --outdir ./dist --target bun",
    "build:fast": "rm -rf dist && bun build ./src/index.ts --outdir ./dist --target bun",
    "start": "NODE_ENV=production bun dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "format": "prettier --write .",
    "db:migrate": "bunx prisma migrate dev",
    "db:seed": "bunx prisma db seed",
    "db:studio": "bunx prisma studio",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:migrate:deploy": "bunx prisma migrate deploy",
    "db:reset": "bunx prisma migrate reset",
    "db:refresh": "bunx prisma migrate reset && bunx prisma db seed",
    "db:backup": "./backup-db.sh",
    "db:restore": "./restore-db.sh",
    "db:studio:test": "bunx prisma studio --env-file .env.test",
    "db:studio:prod": "bunx prisma studio --env-file .env.prod",
    "db:studio:dev": "bunx prisma studio --env-file .env.dev",
    "db:studio:local": "bunx prisma studio --env-file .env.local",
    "perf:light": "node performance-test.js light",
    "perf:medium": "node performance-test.js medium",
    "perf:heavy": "node performance-test.js heavy",
    "perf": "node performance-test.js light",
    "docker:build": "docker build -t rest-api .",
    "docker:run": "docker run -p 4000:4000 --env-file .env rest-api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose up -d --build",
    "swarm:init": "./deploy-swarm.sh init",
    "swarm:deploy": "./deploy-swarm.sh deploy",
    "swarm:update": "./deploy-swarm.sh update",
    "swarm:status": "./deploy-swarm.sh status",
    "swarm:remove": "./deploy-swarm.sh remove",
    "dokploy:compose": "docker-compose -f dokploy-compose.yml config",
    "dokploy:validate": "docker-compose -f dokploy-compose.yml config --quiet",
    "db:backup": "./backup-db.sh",
    "db:restore": "./restore-db.sh"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@casl/ability": "^6.8.0",
    "@elysiajs/node": "^1.4.3",
    "@elysiajs/openapi": "^1.4.13",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@yolk-oss/elysia-env": "^3.0.0",
    "bcryptjs": "^3.0.3",
    "elysia": "^1.4.22",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.17.1",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prismabox": "^1.1.26"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@elysiajs/eden": "^1.4.6",
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^10.2.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "^4.0.17",
    "autocannon": "^8.0.0",
    "bun-types": "^1.3.6",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prisma": "^7.2.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "module": "src/index.js",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
